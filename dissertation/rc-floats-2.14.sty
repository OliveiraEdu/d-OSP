% Rotation

\def\rotate#1{%
    \Grot@setangle{#1}%
    \setbox\z@\hbox\bgroup%
        \hsize0.90\textheight%
        \ignorespaces%
}

\def\endrotate{%
    \unskip\egroup%
    \Grot@x\z@%
    \Grot@y\z@%
    %\wd0\z@\dp0\z@\ht0\z@
    \Grot@box%
}

\def\landscape{%
    \rotate{90}%
}

\def\endlandscape{%
    \endrotate%
}

