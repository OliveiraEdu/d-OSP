         \fi%
     \egroup%
     \let\caption\subfloat@savecaption%
     \let\label\subfloat@savelabel%
     \ifx\subfloat@label\empty%
        \relax%
     \else%
        \subfloatlabel{\subfloat@labelprefix}{\subfloat@label}
     \fi%
}%

