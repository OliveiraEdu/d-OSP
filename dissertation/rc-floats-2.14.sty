\newenvironment{subfloat}[1][]
{%
    \def\subfloat@center{#1}%
    \refstepcounter{subfloat}%
    \let\subfloat@savecaption\caption%
    \let\subfloat@savelabel\label%
%    \def\caption##1{\gdef\subfloat@caption{##1}\ignorespaces}%
