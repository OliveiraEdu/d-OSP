    \def\caption##1{\gdef\subfloat@caption{##1}}%
    \def\label##1{\gdef\subfloat@label{##1}}%
    \def\subfloat@caption{}%
    \def\subfloat@label{}%
    \bgroup%
        \ifx\subfloat@center\empty%
            \centering%
        \fi%
        \smaller%
}%
{%
         \ifx\subfloat@caption\empty%
             \@printsubcaption{\fnum@subfloat}{No caption provided}%
