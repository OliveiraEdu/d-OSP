%            Lorem ipsum dolor sit amet, consectetuer adipiscing elit.  &
%            Lorem ipsum dolor sit amet, consectetuer adipiscing elit.  \\ \hline
%        \end{rctabular}
%
%        \begin{rctabular}{r.{2},{3.3}}
