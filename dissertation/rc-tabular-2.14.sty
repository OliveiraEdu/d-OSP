\newcolumntype{,}[1]{D{,}{.}{#1}}
\newcolumntype{:}[0]{D{.}{.}{-1}}
\newcolumntype{;}[0]{D{,}{.}{-1}}

\renewcommand\tabularxcolumn[1]{p{#1}}
