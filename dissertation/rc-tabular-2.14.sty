%            Supercalifragilisticexpialidocious. Lorem ipsum dolor sit amet, consectetuer adipiscing elit.  \\ \hline
%        \end{rctabular}
%
%        \begin{rctabular}{|L|C|R|J|X|}
%            {L & C x & R & J & X }
%            Lorem ipsum dolor sit amet, consectetuer adipiscing elit.  &
%            Lorem ipsum dolor sit amet, consectetuer adipiscing elit.  &
