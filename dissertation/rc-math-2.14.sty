\def\z@savestack{%
%\typeout{+++SAVING STACK...}
    \newdimen\z@temp% Must be declared here
    \z@localstackmin=\allocationnumber%
    \z@counta=\z@maxtab%
    \loop \ifnum\z@counta > 1%
        \newdimen\z@temp%
