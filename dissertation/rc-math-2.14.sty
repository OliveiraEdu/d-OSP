    \z@localstackmax=\allocationnumber%
%\typeout{+++GLOBAL STACK \the\z@stackmin -- \the\z@stackmax}
%\typeout{+++LOCAL STACK \the\z@localstackmin -- \the\z@localstackmax}
    \z@counta=\z@localstackmin%
