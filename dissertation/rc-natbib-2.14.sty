% Internals

\def\RCNB@beginquote#1{%
    \bgroup%
        \csname @if@show#1\endcsname%
            \medbreak%
            \smaller\itshape\ignorespaces%
        \else%
            \setbox0=\hbox\bgroup%
        \fi%
}

\def\RCNB@endquote#1{%
        \csname @if@show#1\endcsname%
            \relax%
        \else%
            \egroup%
        \fi%
    \egroup%
}

