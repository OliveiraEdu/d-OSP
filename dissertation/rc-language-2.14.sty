% Options

\RequirePackageWithOptions{babel}

\AtBeginDocument{%
    \input{rc-book-2.14/locale/rc-\languagename .def}%

    \let\saveselectlanguage=\selectlanguage
    \def\selectlanguage#1{\saveselectlanguage{#1}\input{rc-book-2.14/locale/rc-\languagename .def}}

    \let\saveotherlanguage=\otherlanguage
    \let\saveendotherlanguage=\endotherlanguage

    \def\otherlanguage#1{\bgroup\selectlanguage{#1}}
    \def\endotherlanguage{\par\egroup}
}

\endinput
