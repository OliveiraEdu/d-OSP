{%
    R%
    \kern-.1667em\raise.25ex\hbox{C}%
    \kern-.25em\raise.25ex\hbox{--}%
    L%
    \kern-.1em\raise.4ex\hbox{a}%
    \kern-.1em\lower.4ex\hbox{n}%
    \kern-.1em\lower.5ex\hbox{g}%
    \kern-.1em\raise.2ex\hbox{u}%
